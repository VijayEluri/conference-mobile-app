<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/now_playing"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/now_playing_height"
    android:orientation="horizontal">
    <LinearLayout
    	android:id="@+id/now_playing_countdown"
        android:background="@color/background2"
        android:paddingLeft="2dip"
        android:paddingRight="1dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="right">
  
      	<LinearLayout
    		android:id="@+id/now_playing_countdown"
	        android:layout_width="120dip"
    	    android:layout_height="wrap_content"
    	    android:gravity="right"
    	    android:orientation="vertical">

	        <TextView
	        	style="@style/TextTimer"
	            android:id="@+id/now_playing_title" />
	        <TextView
	            style="@style/TextTimerSubtitle"
	            android:id="@+id/now_playing_subtitle"/>
	    </LinearLayout>   	
            
        <ImageButton
   			android:id="@+id/now_playing_buy_button"
           	android:layout_width="wrap_content"
           	android:layout_height="200dip"
           	android:paddingBottom="148dip"           	
           	android:src="@drawable/home_btn_buynow"  
           	android:background="@android:color/transparent" />              	
    </LinearLayout>
    <LinearLayout
        android:background="@color/background2"
        android:paddingLeft="1dip"
        android:paddingRight="2dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
   		<TextView
           	android:duplicateParentState="true"
           	android:layout_width="fill_parent"
           	android:layout_height="wrap_content"
           	android:paddingTop="1dip"
           	android:paddingBottom="1dip"
           	android:gravity="center"
           	android:textColor="@color/foreground2"
           	android:textSize="@dimen/text_size_tiny"
           	android:text="@string/sponsored_by"
           	android:singleLine="true"
           	android:ellipsize="end" />       		
	    <ImageView	android:layout_width="wrap_content"
	    			android:layout_height="fill_parent"
	    			android:src="@drawable/sponsor"/>
	 </LinearLayout>
</LinearLayout>
