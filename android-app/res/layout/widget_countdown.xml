<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/countdown_widget"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/now_playing_height"
    android:orientation="horizontal">
    <LinearLayout
        android:background="@color/background2"
        android:paddingLeft="14dip"
        android:paddingRight="14dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/widget_title"
            android:duplicateParentState="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/foreground1"
            android:singleLine="true"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/widget_subtitle"
            android:duplicateParentState="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:textColor="@color/foreground2"
            android:textSize="@dimen/text_size_small"
            android:text="@string/widget_subtitle_text"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>
    <LinearLayout
        android:background="@color/background2"
        android:paddingLeft="1dip"
        android:paddingRight="2dip"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">
   		<TextView
           	android:duplicateParentState="true"
           	android:layout_width="fill_parent"
           	android:layout_height="wrap_content"
           	android:paddingTop="1dip"
           	android:paddingBottom="1dip"
           	android:gravity="center"
           	android:textColor="@color/foreground2"
           	android:textSize="@dimen/text_size_tiny"
           	android:text="@string/sponsored_by"
           	android:singleLine="true"
           	android:ellipsize="end" />       		
	    <ImageView	android:layout_width="wrap_content"
	    			android:layout_height="fill_parent"
	    			android:src="@drawable/sponsor"/>
	 </LinearLayout>
</LinearLayout>
